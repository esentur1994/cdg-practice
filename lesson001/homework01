def greeting(name, last_name, age)
  if age < 18
    puts "#{name} #{last_name} Тебе меньше 18, но начать программировать никогда не рано"
  else
    puts "#{name} #{last_name} Самое время заняться делом!"
  end
end

puts 'Введите ваше имя: '
name = gets.chomp
puts 'Введите вашу фамилию: '
last_name = gets.chomp
puts 'Введите ваш возраст '
age = gets.to_i
greeting(name, last_name, age)
